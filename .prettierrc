{
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "endOfLine": "lf",
  "trailingComma": "none",
  "arrowParens": "avoid",
  "semi": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ".*rc",
      "options": {
        "parser": "json"
      }
    }
  ]
}
